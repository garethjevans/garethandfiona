  <body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">Wedding</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fa fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/#wedding">Wedding</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/#directions">Directions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/#hotels">Hotels</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/#gifts">Gifts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/#information">Information</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/api">API</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <section class="api bg-primary text-center" id="api">
      <div class="container">

        <div class="row">
          <div class="col-md-12 mx-auto text-center">
            <h2>RSVP</h2>
          </div>
        </div>

        <div class="form-group row">
          <label for="example-email-input" class="col-2 col-form-label">Contact Email</label>
          <div class="col-10">
            <input class="form-control" type="email" value="{{ .Rsvp.Email }}" id="contact-email-input">
          </div>
        </div>

{{range .Rsvp.Attendees}}
		<div class="row">
          <div class="form-group mb-2">
            <label for="name" class="sr-only">Name</label>
            <input type="text" class="form-control-plaintext" id="name" value="{{ .Name }}">
          </div>
          <div class="form-group mb-2">
            <label for="name" class="sr-only">Dietry Requirements</label>
            <input type="text" class="form-control-plaintext" id="name" value="{{ .DietryRequirements }}">
          </div>
        </div>
{{end}}

		<div class="row">
		<a class="btn btn-primary" href="/rsvp/{{ .Rsvp.ID }}" role="button">Save</a>
		</div>

      </div>
    </section>

    <footer>
      <div class="container">
        <p>&copy; {{ .P.index_title }} 2018. All Rights Reserved.</p>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="/static/vendor/jquery/jquery.min.js"></script>
